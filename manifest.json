{
  "manifest_version": 3,
  "name": "Markdown Copy",
  "version": "1.0.1",
  "description": "Copy selected webpage content as Markdown. All local, no external APIs. Privacy-friendly.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage",
    "clipboardWrite",
    "notifications"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Markdown Copy",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "commands": {
    "copy_markdown": {
      "suggested_key": {
        "default": "Alt+M",
        "mac": "Alt+M"
      },
      "description": "Copy selection as Markdown"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "vendor/turndown.js",
        "vendor/turndown-plugin-gfm.js",
        "vendor/readability.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "popup/popup.html",
    "open_in_tab": false
  }
}

